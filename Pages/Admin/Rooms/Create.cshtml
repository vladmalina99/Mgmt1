@page
@model Mgmt1.Pages.Admin.Rooms.CreateModel

<div class="row">
    <div class="col-m-8 mx-auto rounded border p-3">
        <h2 class="text-center mb-5">New Room</h2>

        @if (Model.errorMessage.Length > 0)
        {
            <div class='alert alert-warning alert-dismissible fade show' role='alert'>
                <strong>@Model.errorMessage</strong>
            <button type='button'  class='btn-close'  data-bs-dismiss='alert' aria-label='Close'></button>
        </div>
        }
        else if (Model.errorMessage.Length > 0)
        {
            <div class='alert alert-success alert-dismissible fade show' role='alert'>
                <strong>@Model.successMessage</strong>
                <button type='button' class='btn-close' data-bs-dismiss='alert' aria-label='Close'></button>
            </div>
        }

       
        <form method="post" enctype="multipart/form-data">
            <div class="row mb-3">
                <label class="col-sm-4 col-form-label">Name</label>
                <div class="col-sm-8">
                    <input class="form-control" asp-for="RoomDto.Name" />
                    <span asp-validation-for="RoomDto.Name" class="text-danger"></span>
                </div>
            </div>
            <div class="row mb-3">
                <label class="col-sm-4 col-form-label">Category</label>
                <div class="col-sm-8">
                    <select class="form-select" asp-for="RoomDto.Category">
                        <option value="Other">Other</option>
                        <option value="standard">Camere Standard</option>
                        <option value="deluxe">Suite de Lux</option>
                        <option value="panoramic">Camere cu vedere panoramică</option>
                        <option value="spa">Retreat-uri de Spa</option>
                        <option value="family">Suite Familiale</option>
                        <option value="business">Camere Business Class</option>
                        <option value="romantic">Evadări romantice</option>
                        <option value="exotic">Retreat-uri exotice</option>
                    </select>
                </div>
            </div>

            <div class="row mb-3">
                <label class="col-sm-4 col-form-label">Price</label>
                <div class="col-sm-8">
                    <input class="form-control" asp-for="RoomDto.Price" />
                    <span asp-validation-for="RoomDto.Price" class="text-danger"></span>
                </div>
            </div>

            <div class="row mb-3">
                <label class="col-sm-4 col-form-label">Description</label>
                <div class="col-sm-8">
                    <textarea class="form-control" asp-for="RoomDto.Description"></textarea>
                    <span asp-validation-for="RoomDto.Description" class="text-danger"></span>
                </div>
            </div>
            <div class="row mb-3">
                <label class="col-sm-4 col-form-label">Image</label>
                <div class="col-sm-8">
                    <input class="form-control" asp-for="RoomDto.ImageFile" />
                    <span asp-validation-for="RoomDto.ImageFile" class="text-danger"></span>
                </div>
            </div>
            <div class="row mb-3">
                <div class="offset-sm-4 col-sm-4 d-grid">
                    <button type="submit" class="btn btn-primary">Submit</button>
                </div>
                <div class="col-sm-4 d-grid">
                    <a class="btn btn-outline-primary" href="/Admin/Rooms/Index" role="button">Cancel</a>
                </div>
            </div>
        </form>
    </div>
</div>
