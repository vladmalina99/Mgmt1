@page
@model Mgmt1.Pages.Admin.Bookings.CreateModel

<div class="row">
    <div class="col-m-8 mx-auto rounded border p-3">
        <h2 class="text-center mb-5">New Booking</h2>

        @if (Model.errorMessage.Length > 0)
        {
            <div class='alert alert-warning alert-dismissible fade show' role='alert'>
                <strong>@Model.errorMessage</strong>
                <button type='button' class='btn-close' data-bs-dismiss='alert' aria-label='Close'></button>
            </div>
        }
        else if (Model.errorMessage.Length > 0)
        {
            <div class='alert alert-success alert-dismissible fade show' role='alert'>
                <strong>@Model.successMessage</strong>
                <button type='button' class='btn-close' data-bs-dismiss='alert' aria-label='Close'></button>
            </div>
        }

        <form method="post">
            <div class="row mb-3">
                <label class="col-sm-4 col-form-label">Room</label>
                <div class="col-sm-8">
          
                    <select class="form-select" asp-for="Booking.RoomId">
                        @foreach (var room in Model.Rooms)
                        {
                            <option value="@room.Value">@room.Text</option>
                        }
                    </select>
                    <span asp-validation-for="Booking.RoomId" class="text-danger"></span>
                </div>
            </div>

            <div class="row mb-3">
                <label class="col-sm-4 col-form-label">Reservation Date</label>
                <div class="col-sm-8">
                    <input type="datetime-local" class="form-control" asp-for="Booking.ReservationDate" />
                    <span asp-validation-for="Booking.ReservationDate" class="text-danger"></span>
                </div>
            </div>

            <div class="row mb-3">
                <div class="offset-sm-4 col-sm-4 d-grid">
                    <button type="submit" class="btn btn-primary">Submit</button>
                </div>
                <div class="col-sm-4 d-grid">
                    <a class="btn btn-outline-primary" href="/Admin/Bookings/Index" role="button">Cancel</a>
                </div>
            </div>
        </form>
    </div>
</div>
